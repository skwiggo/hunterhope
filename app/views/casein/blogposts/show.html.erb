<h2>View blogpost</h2>

<%= form_for @blogpost, :url => casein_blogpost_path(@blogpost) do |f| %>

	<%= render :partial => 'casein/blogposts/form', :locals => { :f => f } %>
	
	<p class="submits">
	  	<%= link_to 'Cancel', casein_blogposts_path, :class => 'btn btn-mini btn-danger' %>
		<%= f.submit "Save changes", :class => "btn btn-mini btn-primary" %>
	</p>

<% end %>

<%= content_for :sidebar do %>
	<li><%= link_to "#{casein_show_icon "th-list"}Back to list".html_safe, casein_blogposts_path %></li>
<% end %>