<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Lyrics", :lyrics %></th>
			<th><%= casein_sort_link "Spotify", :spotify %></th>
			<th><%= casein_sort_link "Itunes", :itunes %></th>
			<th><%= casein_sort_link "Release", :release %></th>
			<th><%= casein_sort_link "Downloadable", :downloadable %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% songs.each do |song| %>
		<tr>
			<td><%= casein_table_cell_link song.name, casein_song_path(song) %></td>
			<td><%= casein_table_cell_link song.lyrics, casein_song_path(song) %></td>
			<td><%= casein_table_cell_link song.spotify, casein_song_path(song) %></td>
			<td><%= casein_table_cell_link song.itunes, casein_song_path(song) %></td>
			<td><%= casein_table_cell_link song.release, casein_song_path(song) %></td>
			<td><%= casein_table_cell_link song.downloadable, casein_song_path(song) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_song_path(song), :method => :delete, :data => { :confirm => "Are you sure you want to delete this song?" }) %>
			</td>
		</tr>
	<% end %>
</table>